{
    "app-id": "com.endlessm.CompanionAppService",
    "runtime": "com.endlessm.apps.Platform",
    "runtime-version": "3",
    "sdk": "com.endlessm.apps.Sdk",
    "command": "eos-companion-app-service",
    "finish-args": [
        "--share=ipc",
        "--system-talk-name=com.endlessm.Metrics",
        "--system-talk-name=org.freedesktop.Avahi",
        "--system-talk-name=org.freedesktop.login1",
        "--filesystem=xdg-run/dconf", "--filesystem=~/.config/dconf:ro",
        "--filesystem=/var/lib/flatpak:ro",
        "--filesystem=/var/endless-extra/flatpak:ro",
        "--talk-name=ca.desrt.dconf", "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--env=USE_METRICS=1",
        "--share=network",
        "--command=eos-companion-app-service"
    ],
    "build-options" : {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "V": "1"
        }
    },
    "modules": [
        {
            "name": "basin",
            "sources": [
                {
                    "type": "git",
                    "url": "git://github.com/endlessm/basin",
                    "branch": "master"
                }
            ],
            "cleanup": ["*"]
        },
        {
            "name": "eos-companion-app-service",
            "run_tests": @RUN_TESTS@,
            "config-opts": [
                "--disable-integration",
                "--enable-service",
                "--disable-pylint"
            ],
            "sources": [
                {
                    "type": "git",
                    "path": ".",
                    "branch": "@GIT_CLONE_BRANCH@"
                }
            ]
        }
    ]
}
